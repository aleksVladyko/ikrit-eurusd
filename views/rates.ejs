<!DOCTYPE html>
<html>

<head>
  <%- include('./head.ejs') %>
</head>

<body class=" container-xl d-flex flex-column justify-content-center align-items-center bg-secondary bg-opacity-50"
  style="height: 100vh;">
  <%- include('./setEurUsd.ejs') %>
  <div class="container w-50 mt-5">
    <h1 class="text-center">Currency Rates</h1>
    <div class="card  bg-transparent border-0">
      <div class="card-body d-flex align-items-center justify-content-evenly">
        <h2 class="card-title m-0 ">USD/RUB:</h2>
        <% if (usdRubRate) { %>
          <span class="card-text fs-2 font-weight-bold text-success">
            <%= usdRubRate %>
          </span>
          <% } else { %>
            <span class="card-text  font-weight-bold font-size-10 text-success">Курс не установлен</span>
            <% } %>
      </div>
    </div>
    <div class="card bg-transparent border-0">
      <div class="card-body d-flex align-items-center justify-content-evenly">
        <h2 class="card-title m-0">EUR/RUB:</h2>
        <% if (eurRubRate) { %>
          <span class="card-text fs-2 font-weight-bold text-success">
            <%= eurRubRate %>
          </span>
          <% } else { %>
            <span class="card-text  font-weight-bold text-success">Курс не установлен</span>
            <% } %>
      </div>
    </div>
  </div>

</body>